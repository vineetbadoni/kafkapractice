{
    "scenarioName": "Create or Update a customer by customerId @@John",
    "steps": [
        {
            "name": "create_or_update_customer",
            "url": "/api/abc-bank/customers/AMZON-1001",
            "operation": "PUT",
            "request": {
                "headers": {
                    "Content-Type": "application/json;charset=UTF-8"
                },
                "body": {
                    "name": "Elon",
                    "age": 25,
                    "emailId": "emusk@tesla.com"
                }
            },
            "assertions": {
                "status": 200,
                "body": {
                    "id" : "AMZON-1001",
                    "name" : "Elon",
                    "age" : 25,
                    "emailId" : "emusk@tesla.com"
                }
            }
        }
    ]
}
